# Cell 1: Simple thermal extraction model (very rough)
def volatile_fraction(T, T_crit=373.15, shape_factor=5):
    """Crude sigmoid-like model for fraction released vs temperature"""
    return 1 / (1 + np.exp(shape_factor * (T_crit - T)/T_crit))

T_range = np.linspace(300, 1200, 300)  # K
yields = volatile_fraction(T_range)

plt.figure(figsize=(8,5))
plt.plot(T_range, yields*100, label='Estimated volatile release (%)')
plt.axvline(373.15, color='gray', ls='--', label='Water boiling point (1 atm)')
plt.axvline(800,    color='red',   ls='--', label='~800°C baseline')
plt.xlabel('Processing temperature (K)')
plt.ylabel('Volatiles released (%)')
plt.title('Rough thermal volatile extraction curve')
plt.grid(True)
plt.legend()
plt.show()

print(f"At 800 °C ({800+273.15:.0f} K): ~{volatile_fraction(800+273.15)*100:.1f}% release (model)")
