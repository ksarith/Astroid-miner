# Cell 1: Imports & constants
import numpy as np
import matplotlib.pyplot as plt

G = 6.67430e-11          # m³ kg⁻¹ s⁻²
AU = 1.495978707e11      # m
g0 = 9.80665             # m/s² standard gravity

# Typical values from your docs
Isp_chemical = 450       # s (H₂/O₂)
Isp_ion       = 3000     # s (Hall-effect / ion)
Isp_fusion    = 10000    # s (speculative plasma)

# Cell 2: Basic rocket equation functions
def delta_v(Isp, m0, mf):
    """Tsiolkovsky rocket equation: Δv = Isp * g0 * ln(m0 / mf)"""
    return Isp * g0 * np.log(m0 / mf)

def mass_ratio(dv, Isp):
    """Required mass ratio m0/mf to achieve given Δv"""
    return np.exp(dv / (Isp * g0))

# Cell 3: Example — NEA to Mars transfer (simplified)
dv_example = 5000        # m/s (rough Δv for near-Earth to Mars transfer)
print(f"Required mass ratio for {dv_example/1000:.1f} km/s with Isp = {Isp_chemical} s : "
      f"{mass_ratio(dv_example, Isp_chemical):.2f}")

# Cell 4: Plot mass ratio vs Isp for fixed Δv
Isp_range = np.linspace(300, 15000, 200)
mr_chem   = mass_ratio(dv_example, Isp_range)

plt.figure(figsize=(9,5))
plt.plot(Isp_range, mr_chem, label=f"Δv = {dv_example/1000:.0f} km/s")
plt.axvline(Isp_chemical, color='C1', ls='--', label='Chemical (H₂/O₂)')
plt.axvline(Isp_ion,       color='C2', ls='--', label='Ion / Hall')
plt.axvline(Isp_fusion,    color='C3', ls='--', label='Fusion (speculative)')
plt.yscale('log')
plt.xlabel('Specific impulse Isp (s)')
plt.ylabel('Required mass ratio m₀/mf')
plt.title('Mass ratio needed for fixed Δv')
plt.grid(True, which="both", ls="--", alpha=0.5)
plt.legend()
plt.show()
